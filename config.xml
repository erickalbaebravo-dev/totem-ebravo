<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" 
        xmlns:tizen="http://tizen.org/ns/widgets" 
        id="http://erickalbaebravo.github.io/totem" 
        version="1.0.0" 
        viewmodes="maximized"
        width="1920" 
        height="1080">
    
    <tizen:application id="com.ebravo.totemapp" 
                       package="com.ebravo.totem" 
                       required_version="4.0"/>
    
    <name>Totem EBravo KM24A</name>
    <description>Sistema de Totem EBravo</description>
    
    <icon src="icon.png"/>
    <icon src="icon.png" width="130" height="130"/>
    
    <content src="index.html" type="text/html" charset="utf-8"/>
    
    <feature name="http://tizen.org/feature/screen.size.all"/>
    <feature name="http://tizen.org/feature/screen.size.normal.1080.1920"/>
    
    <!-- PRIVILÉGIOS OBRIGATÓRIOS para KM24A -->
    <tizen:privilege name="http://tizen.org/privilege/internet"/>
    <tizen:privilege name="http://tizen.org/privilege/application.launch"/>
    <tizen:privilege name="http://tizen.org/privilege/tv.display"/>
    <tizen:privilege name="http://developer.samsung.com/privilege/install"/>
    
    <!-- IMPORTANTE: Para KM24A funcionar -->
    <tizen:profile name="tv-samsung"/>
    <tizen:setting screen-orientation="landscape" context-menu="enable" background-support="disable" encryption="disable" install-location="auto"/>
    
    <!-- CORS total -->
    <access origin="*" subdomains="true"/>
    
    <!-- Metadata específica Samsung -->
    <tizen:metadata key="http://samsung.com/tv/metadata/prelaunch.support" value="true"/>
    <tizen:metadata key="http://samsung.com/tv/metadata/use.native.scroll" value="false"/>
    
</widget>
